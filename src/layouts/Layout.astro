---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import { Tweet, Vimeo, YouTube } from "astro-embed";

export interface Props {
  title: string;
}

// const { src } = await getImage({
//   src: "../../assets/hero.png",
//   width: 800,
//   height: 742,
//   format: "avif",
// });
// console.log(src);

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL("/screely.png", Astro.site).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Resource Gallery"
  : "Resource Gallery - Resources you need to start in tech";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />

    <!-- Google Icons for Dark Mode Button -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,100,1,-25"
    />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="../assets/apple-touch-icon.png">
      <link
        rel="icon"
        type="image/png"
        sizes="32x32"
        href="../assets/favicon-32x32.png"
      />
      <link
        rel="icon"
        type="image/png"
        sizes="16x16"
        href="../assets/favicon-16x16.png"
      />
      <link rel="manifest" href="../assets/site.webmanifest" />
      <link
        rel="mask-icon"
        href="../assets/safari-pinned-tab.svg"
        color="#5bbad5"
      />
      <meta name="msapplication-TileColor" content="#da532c" />
      <meta name="theme-color" content="#ffffff" />
      description="Are you interested in pursuing a career in tech? Are you a newcomer?
      Don't sure where, how, or why to begin? You are in the right place. Resource
      Gallery provides the tools and resources you need to evolve into a skilled
      developer." canonical={canonicalURL}
      twitter={
        {
          creator: "@astrodevil_",
          site: "@resourcegallery",
          card: "summary_large_image",
        }
      }
      screely={
        {
          basic: {
            url: canonicalURL,
            type: "website",
            title: `Resource Gallery`,
            image: resolvedImageWithDomain,
          },
          image: {
            alt: "Resource Gallery Homepage Screenshot",
          },
        }
      }
      />
    </SEO>
  </head><body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }

      /* Css for dark mode button */
      * {
        box-sizing: border-box;
        padding: 0;
      }

      body {
        transition: 0.5s linear;
      }

      body.dark {
        background-color: #050505;
        color: white;
      }

      .label {
        /* background-color:brown; */
        background: #181717;
        box-shadow: inset 0px 5px 15px rgba(0, 0, 0, 0.4),
          inset 0px -5px 15px rgba(255, 255, 255, 0.4);
        border-radius: 30px;
        position: relative;
        height: 32px;
        width: 73px;
        padding: 3px;
        display: flex;
        transition: 0.3s;
        align-items: center;
      }

      .moon {
        color: yellow;
        transition: 0.3s;
      }

      .sun {
        color: yellow;
        margin-left: 16px;
        transition: 0.3s;
      }

      .ball {
        color: white;
        position: absolute;
        transition: transform 0.3s linear;
      }

      .checkbox {
        opacity: 0;
        position: absolute;
      }

      .checkbox:checked + .label .ball {
        transform: translate(38px);
      }
    </style>
  </body>
</html>
