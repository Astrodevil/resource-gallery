---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import { Tweet, Vimeo, YouTube } from 'astro-embed';

export interface Props {
  title: string;
}

// const { src } = await getImage({
//   src: "../../assets/hero.png",
//   width: 800,
//   height: 742,
//   format: "avif",
// });
// console.log(src);

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/screely.png",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Resource Gallery"
  : "Resource Gallery - Resources you need to start in tech";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Are you interested in pursuing a career in tech? Are you a newcomer? Don't sure where, how, or why to begin? You are in the right place. Resource Gallery provides the tools and resources you need to evolve into a skilled developer."
      canonical={canonicalURL}
      twitter={{
        creator: "@astrodevil_",
        site: "@resourcegallery",
        card: "summary_large_image",
      }}
      screely={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Resource Gallery`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Resource Gallery Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>

