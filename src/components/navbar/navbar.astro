---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { Icon } from 'astro-icon'

const menuitems = [
  
  // {
  //   title: "Pricing",
  //   path: "/pricing",
  // },
  {
    title: "Resources",
    path: "/resource",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Quick Links",
    // path: "#",
    children: [
      { title: "Twitter‚ù§Ô∏è", path: "https://twitter.com/astrodevil_", target: "_blank"},
      { title: "InstagramüëÄ", path: "https://www.instagram.com/codes.astro/", target: "_blank" },
      { title: "Sponser on Ko-Fi‚òï", path: "https://ko-fi.com/astrodevil", target: "_blank" },
    ],
  },
  
  
 
