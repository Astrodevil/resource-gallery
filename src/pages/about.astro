import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Picture } from "@astrojs/image/components";


const TeamImg1 =
  "https://cdn.bio.link/uploads/profile_pictures/2021-12-17/rIgWZLgFZMi84ZKzAZ2Rw3K2PbIJ5PJk.png";
const TeamImg2 =
  "https://images.unsplash.com/photo-1633332755192-727a05c4013d?&fit=crop&w=280";
const TeamImg3 =
  "https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?&fit=crop&w=280";
  const TeamImg4 =
  "https://bhartik021.github.io/linktree/assets/my-Image.jpg";

const team = [
  {
    name: "Mr. Ã…nand",
    title: "Creator",
    avatar: {
      src: TeamImg1,
      width: 580,
      height: 580,
    },
      linkedin: "https://www.linkedin.com/in/amitesh1208/",
    github: "https://github.com/Astrodevil"
  },
  {
    name: "Bharti Kumari",
    title: "Project Maintainer",
    avatar: {
      src: TeamImg4,
      width: 580,
      height: 580,
    },
     linkedin: "https://www.linkedin.com/in/bhartik021/",
    github: "https://github.com/bhartik021"
  },
];

---

<Layout title="About">
  <Container>
    <Sectionhead>
      <Fragment slot="title"><span class="text-gradient">About</span></Fragment>
      <Fragment slot="desc">Our team consists of each contributor improving the <strong>Resource Gallery</strong>.</Fragment>
    </Sectionhead>
    <p class="instructions">
			To add your profile, after contribution open the directory <code><a href="https://github.com/Astrodevil/resource-gallery/blob/main/src/pages/about.astro">src/pages/about</a></code> on GitHub.<br />
			<strong><a href="https://github.com/Astrodevil/resource-gallery/issues">Open Issue:</a></strong> Improve the "Resource Gallery" and earn credits as early contributorðŸŽ‰</p>

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">
        Empowering the learners with resources & tools.
      </h2>
      <p class="text-lg leading-relaxed text-slate-500">
        We're a multi-cultural team from around the world! We come from diverse
        backgrounds, bringing different personalities, experiences and skills to
        the job. This is what makes our team so special.
      </p>
    </div>
    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-12">
      {
  team.map((item) => (
    <div class="group">
      <div class="w-full aspect-square">
        <a href={item.linkedin} target="_blank" rel="noopener noreferrer">
          <Picture
            {...item.avatar}
            format="avif"
            alt="Team"
            widths={[200, 400]}
            aspectRatio="1:1"
            sizes="(max-width: 800px) 100vw, 400px"
            class="w-full h-full object-cover rounded transition group-hover:-translate-y-1 group-hover:shadow-xl"
            format="avif"
          />
        </a>
      </div>

      <div class="mt-4 text-center">
        <h2 class="text-lg text-gray-800"> {item.name}</h2>
        <h3 class="text-sm text-slate-500"> {item.title}</h3>
                      
                      <div class="flex justify-center mt-2">

                   <a href={item.github} target="_blank" rel="noopener noreferrer">
                  <img
                    src="https://upload.wikimedia.org/wikipedia/commons/c/c2/GitHub_Invertocat_Logo.svg"
                    alt="GitHub"
                    class="w-6 h-6 mr-2 social-icon"
                  />
                </a>
                <a href={item.linkedin} target="_blank" rel="noopener noreferrer">
                  <img
                    src="https://www.logo.wine/a/logo/LinkedIn/LinkedIn-Icon-Logo.wine.svg"
                    alt="LinkedIn"
                    class="w-7 h-7 social-icon"
                  />
                </a>
              </div>
      </div>
    </div>
  ))
}

    </div>
  </Container>  
</Layout>

